<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangkuo.dao.UserMapper">
	<resultMap type="com.zhangkuo.entity.User" id="userMapper">
		<id property="id" column="id"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
	</resultMap>
	
	<select id="list" resultMap="userMapper">
		SELECT * FROM cms_user
		<where>
			<if test='value != null and value !="" '>
				AND	username LIKE concat('%',#{value},'%')
			</if>
		</where>
	</select>
	
	<select id="getUserById" resultMap="userMapper">
		SELECT * FROM cms_user WHERE id=#{value}
	</select>
	
</mapper>